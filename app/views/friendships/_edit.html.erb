<div id='friendship_<%= edit.id %>'><% if edit.inverse_friendships.exists?(:user_id => my_user_id) %><%= link_to t(:link_delete_friend), user_remove_friend_path(:username => current_user_stub.username, :friend => edit.username), :method => :delete, :remote => true %>
<% elsif edit.id != my_user_id and session[:logged_in] %><%= link_to t(:link_add_friend), user_add_friend_path(:username => current_user_stub.username, :friend => edit.username), :method => :post, :remote => true %>
<% if edit.friendships.exists?(:friend_id => my_user_id, :responded => false, :blocked => false) %><%= link_to t(:link_ignore_friend_request), user_ignore_friend_path(:username => current_user_stub.username, :friend => edit.username), :remote => true %> <%= link_to t(:link_block_friend_request), user_block_friend_path(:username => current_user_stub.username, :friend => edit.username), :remote => true %>
<% end %>
<% end %></div>
